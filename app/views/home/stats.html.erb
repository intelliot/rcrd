<%= render 'shared/about' %>

<h1 class="mkb">Stats</h1>

<div class="grid">
  <div class="unit one-of-two">
    <div class="mzb pf ac" style="border: solid 1px #eee;">
      <div class="mdb">Records in the last 24 hours</div>
      <div class="th"><%= @stats['24h'] %></div>
    </div>
  </div>
  <div class="unit one-of-two">
    <div class="mzb pf ac" style="border: solid 1px #eee;">
      <div class="mdb">Records in the last 7 days</div>
      <div class="th"><%= @stats['7d'] %></div>
    </div>
  </div>
</div>
