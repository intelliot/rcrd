
<% last_day = '0' %>
<% records.each do |record| %>
  <div class="day">
    <% if last_day != record.created_at.strftime('%d') %>
      <h4 class="span"><%= record.created_at.strftime '%A %b %d %Y' %></h4>
    <% end %>
    <% last_day = record.created_at.strftime '%d' %>
    <%= link_to record.created_at.strftime('%l:%M%P'), record %>
    <% record.cats_from_raw.each do |cat| %>
      <a href="/cats/<%= no_mag(cat) %>" class="cat" style="background-color: hsl(<%= record.hue %>, 70%, 40%); border-bottom: solid 2px hsl(<%= record.hue %>, 80%, 20%);"><span><%= cat %></span></a>
   
    <% end %>
  </div>
<% end %>
