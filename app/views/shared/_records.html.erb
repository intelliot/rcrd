
<% last_day = '0' %>
<% records.each do |record| %>
  <div class="day">

    <% if last_day != record.local_target.strftime('%d') %>
      <div class="span">
        <h4><%= record.local_target.strftime '%A %b %d %Y' %> <span class="tiny normal"><%= record.time_zone %></span></h4>
        
      </div>
    <% end %>
    <% last_day = record.local_target.strftime '%d' %>

    <%= link_to record.local_target.strftime('%l:%M%P'), record %>
    <% record.cats_from_raw.each do |cat| %>
      <a href="/cats/<%= no_mag(cat) %>" class="cat" style="background-color: hsl(<%= record.hue %>, 70%, 40%); border-bottom: solid 2px hsl(<%= record.hue %>, 80%, 20%);"><span><%= cat %></span></a>
   
    <% end %>
  </div>
<% end %>
