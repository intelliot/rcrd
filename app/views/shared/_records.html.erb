<% last_day = '0' %>
<% records.each do |record| %>
  <div class="day">

    <% if last_day != record.local_target.strftime('%d') %>
      <div class="span">
        <h4><%= record.local_target.strftime '%A %b %d %Y' %> <span class="tiny normal"><%= record.time_zone %></span></h4>
        
      </div>
    <% end %>
    <% last_day = record.local_target.strftime '%d' %>

    <div class="tiny margin-bottom-small"><%= link_to record.local_target.strftime('%l:%M%P'), record %></div>
    <% record.appearances.each do |appear| %>
      <%= render :partial => "shared/appearance", :locals => {:appear => appear} %>
    <% end %>
  </div>
<% end %>
