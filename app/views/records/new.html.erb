<div class="mfy clearfix induction">
  <%= form_for @record do |f| %>
    <% if @record.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@record.errors.count, "error") %> prohibited this record from being saved:</h2>

        <ul>
        <% @record.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="input-wrap">
      <%= f.text_field :raw, {placeholder: "e.g. workout, swim, Masters, Koret", id: "cat-input"} %>
    </div>
    <div class="field">
      <%= f.datetime_select :target %>
    </div>
    <div class="field">
      <%= f.hidden_field :time_zone, value: current_user.time_zone %>
    </div>
    <%= f.submit %>
  <% end %>
  <p>Current time zone: <%= current_user.time_zone %> <a href="/settings" class="small">change &raquo;</a></p>
</div>

<div class="margin-y">
  <h1>Last 7 days</h1>
  <%= render :partial => "shared/records", :locals => {:records => @last_7_days} %>
</div>
