<!DOCTYPE html>
<html>
<head>
  <title>rcrd</title>
  <%= stylesheet_link_tag 'application' %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.ico' %>
  <!--<meta name="viewport" content="width=device-width, user-scalable=no" />-->
<meta content="initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport">

  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black">
  <link rel="apple-touch-icon" href="/assets/rcrd-touch-icon-162.png">
  <link href="/assets/rcrd-touch-startup-image.png" rel="apple-touch-startup-image" sizes="640x1096">
</head>
<body>
  <div id="everything">
    <% if flash[:notice] %>
      <div class="pf white" style="<%= bg_color_now %>">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <header class="clearfix">
      <h1 class="logo"><a href="/"></a></h1>
      <ul>
        <li class="<%= current 'home', 'index' %><%= current 'home', 'welcome' %>"><a href="/">home</a></li>
        <% if current_user %>
          <li class="<%= current 'records', 'new' %>"><a href="/records/new">records</a></li>
          <li class="<%= current 'cats' %>"><a href="/cats">cats</a></li>
          <li class="<%= current 'users', 'edit' %>"><a href="/settings">settings</a></li>
        <% else %>
          <li class="<%= current 'sessions', 'new' %>"><a href="/login">log in</a></li>
          <li class="<%= current 'users', 'new' %>"><a href="/signup">sign up</a></li>
        <% end %>
        <li class="<%= current 'home', 'guide' %><%= current 'home', 'stats' %>"><a href="/guide">guide</a></li>
      </ul>
    </header>
    <%= yield %>
  </div>
  <%= javascript_include_tag 'application' %>
  <script type="text/javascript">
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-33106225-1']);
    _gaq.push(['_setDomainName', 'rcrd.org']);
    _gaq.push(['_trackPageview']);
    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();
  </script>
</body>
</html>
