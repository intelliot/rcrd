<!DOCTYPE html>
<html>
<head>
  <title>rcrd</title>
  <%= stylesheet_link_tag 'application' %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.ico' %>
  <meta name="viewport" content="width=device-width, user-scalable=no" />
</head>
<body>
  <div id="everything">
    <% if flash[:notice] %>
      <div class="pf white" style="<%= bg_color_now %>">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <header class="clearfix">
      <h1 class="logo"><a href="/">rcrd</a></h1>
      <ul>
        <% if current_user %>
          <li class="<%= current 'home', 'index' %><%= current 'home', 'welcome' %>"><a href="/">dashboard</a></li>
          <li class="<%= current 'records', 'new' %>"><a href="/records/new">add</a></li>
          <li class="<%= current 'records', 'index' %>"><a href="/records">records</a></li>
          <li class="<%= current 'cats' %>"><a href="/cats">cats</a></li>
          <li class="<%= current 'users', 'edit' %>"><a href="/settings">settings</a></li>
        <% else %>
          <li class="<%= current 'home', 'welcome' %>"><a href="/">welcome</a></li>
          <li class="<%= current 'sessions', 'new' %>"><a href="/sessions/new">log in</a></li>
          <li class="<%= current 'users', 'new' %>"><a href="/users/new">sign up</a></li>
        <% end %>
        <li class="<%= current 'home', 'guide' %><%= current 'home', 'stats' %><%= current 'home', 'about' %>"><a href="/guide">guide</a></li>
      </ul>
    </header>
    <%= yield %>
  </div>
  <%= javascript_include_tag 'application' %>
  <script type="text/javascript">
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-33106225-1']);
    _gaq.push(['_setDomainName', 'rcrd.org']);
    _gaq.push(['_trackPageview']);
    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();
  </script>
</body>
</html>
